        <item name="android:elevation">6dp</item>
    </style>

    <!-- ===========================================================================================
                                 CIRCULAR FLOATING BUTTON COLOURS - START
    ============================================================================================ -->

    //Default Button Color
    <color name="circularFloatingActionButtonDefaultBg">#fff</color>



