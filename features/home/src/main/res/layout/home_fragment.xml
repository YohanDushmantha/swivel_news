<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="viewModel"
                type="com.swivel.home.ui.home.HomeViewModel" />

        <variable
                name="tripPlannerViewModel"
                type="com.swivel.home.ui.trip_planner.TripPlannerViewModal" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- ***************************************************************************************
                                    BOTTOM BAR - START
        **************************************************************************************** -->

        <include
                android:id="@+id/home_content"
                layout="@layout/home_content_layout"
                app:viewModel="@{viewModel}" />

        <!-- ***************************************************************************************
                                    BOTTOM BAR - END
        **************************************************************************************** -->

        <!-- ***************************************************************************************
                                    BOTTOM BAR - START
        **************************************************************************************** -->

        <include
                android:id="@+id/trip_planner_container"
                layout="@layout/trip_planner_persistant_bottom_sheet_layout"
                app:tripPlannerViewModel="@{tripPlannerViewModel}" />

        <!-- ***************************************************************************************
                                    BOTTOM BAR - END
        **************************************************************************************** -->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>