<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:id="@+id/walkthrough_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/walkthrough_title"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sample_walkthrough_slide_1"
            android:layout_marginLeft="@dimen/v_16"
            android:layout_marginRight="@dimen/v_16"
            app:layout_constraintDimensionRatio="H,1:1"
            android:contentDescription="TODO" />

    <TextView
            android:id="@+id/walkthrough_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/walkthrough_page1_title"
            android:textSize="@dimen/text_normal_125"
            android:layout_marginStart="@dimen/v_16"
            android:layout_marginEnd="@dimen/v_16"
            android:textColor="@color/walkthrough_view_pager_title"
            android:inputType="textMultiLine"

            />
</androidx.constraintlayout.widget.ConstraintLayout>